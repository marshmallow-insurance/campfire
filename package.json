{
  "name": "@mrshmllw/campfire",
  "version": "1.1.0",
  "description": "Collection of toasty utils and configs used by Marshmallow Technology",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "check-types": "tsc --noEmit",
    "build": "npm run clean && tsc --p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "pre-commit-lint": "npm run check-types && lint-staged",
    "commitlint": "commitlint --edit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./configs/*": {
      "types": "./dist/configs/*.d.ts",
      "import": "./dist/configs/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    },
    "./workflows/*": "./dist/workflows/*"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@commitlint/types": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.0",
    "conventional-changelog-conventionalcommits": "^9.0.0"
  },
  "peerDependencies": {
    "@commitlint/cli": "^19.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0 || ^16.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.0.0"
  },
  "peerDependenciesMeta": {
    "@commitlint/cli": {
      "optional": true
    },
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "husky": {
      "optional": true
    },
    "lint-staged": {
      "optional": true
    },
    "semantic-release": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/types": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.33.0",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marshmallow-insurance/campfire.git"
  },
  "author": "",
  "license": "ISC"
}
