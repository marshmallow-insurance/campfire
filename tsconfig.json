{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "libs"
  },
  "include": ["libs/**/*", "release.config.js", "commitlint.config.ts"],
  "exclude": ["node_modules", "dist"]
}
