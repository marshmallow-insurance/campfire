{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "libs",
  },
  "include": [
    "libs/**/*",
    "release.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
